#include <iostream>
using namespace std;

int getValueFromUser()
{
int amount;
cout<<"\nEnter an integer:";
cin>>amount;
return amount;
return amount;
}

int main() 
{
int number {getValueFromUser()};
int number2 {getValueFromUser()};
int number3 {getValueFromUser()};

cout << "\n\nIf you add the three amounts shown above together then the     total amount you get is "<<number+number2+number3;
cout << "\n\nIf you then double the total amount above then your new amount is "<<number+number2+number3*4;
cout << "\n\nHowever, if you quadruple the original total you now get "<<number+number2+number3*10;
return 0;
} 
